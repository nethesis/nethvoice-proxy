{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "configure-module input",
  "$id": "http://schema.nethserver.org/nethvoice-proxy/configure-module-input.json",
  "description": "Configure nethvoice-proxy",
  "examples": [
    { "addresses": {} },
    { "addresses": { "address": "1.2.3.4" } },
    {
      "addresses": { "address": "192.168.1.1", "pubblic_address": "1.2.3.4" }
    },
    {
      "addresses": {
        "address": "2001:db8:3333:4444:5555:6666:7777:8888",
        "pubblic_address": "2001:db8:3333:4444:CCCC:DDDD:EEEE:FFFF"
      }
    }
  ],
  "type": "object",
  "properties": {
    "addresses": {
      "title": "Address that are aspected to receive VoIP traffic",
      "type": "object",
      "required": ["address"],
      "additionalProperties": false,
      "properties": {
        "address": {
          "title": "Address that is aspected to receive VoIP traffic",
          "type": "string",
          "format": "ip-address",
          "anyOf": [{ "format": "ipv4" }, { "format": "ipv6" }]
        },
        "pubblic_address": {
          "title": "Pubblic address that is aspected to receive VoIP traffic, in case of NAT",
          "type": "string",
          "anyOf": [{ "format": "ipv4" }, { "format": "ipv6" }]
        }
      }
    }
  }
}
